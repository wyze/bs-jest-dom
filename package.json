{
  "name": "bs-jest-dom",
  "version": "2.0.1",
  "description": "BuckleScript bindings for jest-dom.",
  "repository": "wyze/bs-jest-dom",
  "author": {
    "name": "Neil Kistner",
    "email": "neil.kistner@gmail.com",
    "url": "https://neilkistner.com"
  },
  "license": "MIT",
  "files": [
    "src/*.re",
    "src/*.rei",
    "bsconfig.json"
  ],
  "scripts": {
    "build": "bsb -make-world",
    "clean": "run-p clean:*",
