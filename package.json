    "bisect_ppx": "^2.3.0",
    "bs-platform": "^7.2.2",
    "bs-webapi": "^0.15.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "@glennsl/bs-jest": "^0.4.8"
